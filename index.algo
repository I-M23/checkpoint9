FUNCTION palindrom(str) : BOOLEAN
VAR
    left: INTEGER:=0;
    right:INTEGER:=str.length-1;
    str:STRING;
BEGIN
    IF (left>=right) THEN
        return true;
    END_IF
    IF (str[left] = str[right]) THEN
        return palaindrom (str[left+1,right-1])
    ELSE IF (str [left]<>str[right]) THEN
        return false
    END_IF
END